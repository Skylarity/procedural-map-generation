{
	"compilerOptions": {
		"target": "es6",
		"module": "commonjs",
		"declaration": true,
		"outDir": "./dist",
		"strict": true,
		"noImplicitAny": true,
		"noImplicitThis": true,
		"esModuleInterop": true,
		"removeComments": true,
		"sourceMap": true
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "**/*.test.ts"]
}
